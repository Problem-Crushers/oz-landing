{
  "name": "@musicflow/root",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many --target=serve --all --parallel=true",
    "build": "nx run-many --target=build --all --parallel=true",
    "test": "nx run-many --target=test --all --parallel=true",
    "lint": "nx run-many --target=lint --all --parallel=true",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "prepare": "husky install"
  },
  "private": true,
  "devDependencies": {
    "@nx/eslint": "21.3.2",
    "@nx/eslint-plugin": "21.3.2", 
    "@nx/jest": "21.3.2",
    "@nx/js": "21.3.2",
    "@nx/node": "21.3.2",
    "@nx/react": "21.3.2",
    "@nx/vite": "21.3.2",
    "@nx/workspace": "21.3.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "nx": "21.3.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "nx": {
    "defaultProject": "web"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  }
}