{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@musicflow/shared/types": ["libs/shared/types/src/index.ts"],
      "@musicflow/shared/contracts": ["libs/shared/contracts/src/index.ts"],
      "@musicflow/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@musicflow/player": ["libs/player/src/index.ts"],
      "@musicflow/ui": ["libs/ui/src/index.ts"],
      "@musicflow/video-processing": ["libs/video-processing/src/index.ts"],
      "@musicflow/audio-analysis": ["libs/audio-analysis/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}